<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_padding_width"
        android:layout_marginTop="@dimen/common_padding_width"
        android:layout_weight="1"
        android:textColor="@color/main_color"
        android:textSize="@dimen/second_text_size" />

    <TextView
        android:id="@+id/tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/common_padding_width"
        android:layout_marginTop="20px"
        android:layout_weight="1"
        android:paddingBottom="@dimen/common_padding_width"
        android:textColor="@color/second_color"
        android:textSize="@dimen/third_text_size" />
</LinearLayout>
