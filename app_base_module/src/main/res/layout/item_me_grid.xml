<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/common_item_bg"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="125px"
        android:layout_height="125px"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50px"
        android:contentDescription="Item Icon"
        app:layout_auto_baseheight="width" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51px"
        android:layout_marginTop="@dimen/common_padding_width"
        android:textColor="@color/main_color"
        android:textSize="@dimen/second_text_size" />
</RelativeLayout>