<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/theme_color_press" android:startColor="@color/theme_color_press" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:angle="270" android:endColor="@color/theme_color" android:startColor="@color/theme_color" />
        </shape>
    </item>

    <item android:state_enabled="true">
        <shape>
            <gradient android:angle="270" android:endColor="@color/theme_color" android:startColor="@color/theme_color" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient android:angle="270" android:endColor="@color/theme_color" android:startColor="@color/theme_color" />
        </shape>
    </item>
</selector>